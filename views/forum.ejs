                                thereof complies with such licenses and/or right
                            </div>

                            <div class="btnContainer">
                                <input type="button" value="Agree">
                                <input type="button" value="DisAgree">
                            </div>
                        </div>
                    </div>

                    <% if(posts) { %>
                        <% posts.forEach ( post => { %>
                            <div class="item">
                                <div class="itemImg">
                                    <img src="img/uploads/<%= post.user.character %>">
                                    <h3><%= post.user.name %></h3>
                                </div>
                                <div class="itemText">
                                    <% if (session && post.user._id == session._id) { %>
                                        <textarea class="myArticle itemMyArticle" id="<%= post._id %>">
                                            <%= post.text %>
                                        </textarea>
                                        <div class="btnContainer">
                                            <button onclick="fn_update('<%= post._id %>')">수정</button>
                                            <button >삭제</button>
                                            <button >답변글</button>
                                        </div>
                                    <% } else {%>
                                        <div class="text">
                                            <%= post.text %>
                                        </div>
                                        <div class="btnContainer">
                                            <button  onclick="">Agree</button>
                                            <button onclick="">Disagree</button>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        <% }) %>
                    <% } %>
                </div>
            </main>
            <%- include ('footer') %>
        </div>
    </body>
    <script src="/js/article.js"></script>
</html>